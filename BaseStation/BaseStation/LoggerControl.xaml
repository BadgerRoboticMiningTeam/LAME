<UserControl x:Class="BaseStation.LoggerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BaseStation"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <TextBox x:Name="LoggerTextBox" TextWrapping="Wrap" 
            Background="LightGray" IsReadOnly="True" Height="Auto"
            Text="{Binding Path=Text, Mode=OneWay}"
            VerticalScrollBarVisibility="Visible" 
            Margin="5"/>
</UserControl>
